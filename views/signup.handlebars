<link href='/public/css/login.css' rel='stylesheet' />

<div class='text-center form-signin' id='signin-div'>
  <form id='login-form'>
    <img
	  id="logo"
      class='mb-4'
      src='/public/images/Logo.png'
      alt='Company Logo'

    />
    <h1 class='h3 mb-3 fw-normal'>C'est La Vie</h1>

    <div class='form-floating'>
      <input
        type='text'
        class='form-control'
        id='floatingFirstName'
        placeholder='First Name'
      />
      <label for='floatingFirstName'>First Name</label>
    </div>
    <div class='form-floating'>
      <input
        type='text'
        class='form-control'
        id='floatingLastName'
        placeholder='Last Name'
      />
      <label for='floatingLastName'>Last Name</label>
    </div>
    <div class='form-floating'>
      <input
        type='email'
        class='form-control'
        id='floatingInput'
        placeholder='name@example.com'
      />
      <label for='floatingInput'>Email address</label>
    </div>
    <div class='form-floating'>
      <input
        type='password'
        class='form-control'
        id='floatingPassword'
        placeholder='Password'
      />
      <label for='floatingPassword'>Password</label>
    </div>

    <button class='w-100 btn btn-lg btn-primary' type='submit' id='signup-btn'>
      Sign up
    </button>
  </form>
  <a href='/users/login'>Have an account already? Click here!</a>
</div>

<script src='/public/js/signup.js' defer></script>